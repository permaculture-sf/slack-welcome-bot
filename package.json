{
  "name": "slack-welcome-bot",
  "version": "1.0.0",
  "description": "Slack welcome bot",
  "main": "index.js",
  "scripts": {
    "now": "now",
    "start": "DEBUG=true node index.js",
    "serve": "$(npm bin)/netlify dev",
    "build": "npm run build:api",
    "build:api": "netlify-lambda build src/api",
    "docker:build": "docker build -t psf/slack-welcome-bot .",
    "docker:build:dev": "docker build -t psf/slack-welcome-bot:dev -f dev.dockerfile .",
    "docker:logs:dev": "docker logs slack-welcome-bot-dev-inst",
    "docker:rmc": "docker rm slack-welcome-bot-inst; exit 0",
    "docker:rmc:dev": "docker rm slack-welcome-bot-dev-inst; exit 0",
    "docker:run": "docker run -i --rm --name slack-welcome-bot-inst psf/slack-welcome-bot",
    "docker:run:dev": "docker run -i --rm --name slack-welcome-bot-dev-inst -v $PWD:/usr/src/app psf/slack-welcome-bot:dev",
    "docker:shell:dev": "docker exec -it slack-welcome-bot-dev-inst /bin/bash",
    "docker:stop": "docker stop slack-welcome-bot-inst; exit 0",
    "docker:stop:dev": "docker stop slack-welcome-bot-dev-inst; exit 0",
    "eslint": "eslint --fix .",
    "git:prepush": "npm run test",
    "git:precommit": "lint-staged",
    "test": "npm run test:unit",
    "test:unit": "tape \"src/**/*.test.js\" | faucet"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run git:precommit --silent",
      "pre-push": "npm run git:prepush --silent"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/permaculture-sf/slack-welcome-bot.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/permaculture-sf/slack-welcome-bot/issues"
  },
  "homepage": "https://github.com/permaculture-sf/slack-welcome-bot#readme",
  "devDependencies": {
    "eslint": "^6.6.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-tape": "^1.1.0",
    "faucet": "0.0.1",
    "husky": "^3.0.9",
    "lint-staged": "^9.4.2",
    "netlify-cli": "^2.20.2",
    "netlify-lambda": "^1.6.3",
    "now": "^16.4.3",
    "prettier": "^1.18.2",
    "tape": "^4.11.0"
  },
  "dependencies": {
    "@slack/events-api": "^2.3.0",
    "@slack/web-api": "^5.3.0",
    "debug": "^4.1.1",
    "dotenv": "^8.2.0"
  },
  "lint-staged": {
    "*.{js,css,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.test.js": [
      "npm run test:unit",
      "git add"
    ]
  }
}
